{
  "extends": "./.wxt/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["chrome", "node"],
    "resolveJsonModule": true
  },
  "include": [
    "entrypoints",
    "components",
    "utils",
    "assets",
    "src",
    "e2e",
    "wxt.config.ts",
    ".wxt/wxt.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
